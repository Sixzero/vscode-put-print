{
  "name": "put-print",
  "displayName": "Put Print",
  "description": "Quickly put print statements",
  "version": "0.0.1",
  "publisher": "ryu1kn",
  "engines": {
    "vscode": "^1.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.putPrintStatement"
  ],
  "main": "./extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Put Print configuration",
      "properties": {
        "putprint.printTemplate.javascript.template": {
          "type": "string",
          "default": "console.log('{{selection:escape}}:', {{selection}});",
          "description": "Print statement template for JavaScript"
        },
        "putprint.printTemplate.javascript.escape": {
          "type": "array",
          "items": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "default": [
            ["'", "\\'"],
            ["\\", "\\\\"]
          ],
          "description": "Print statement template for JavaScript"
        },
        "putprint.printTemplate.default.template": {
          "type": "string",
          "default": "{{selection}}",
          "description": "Will be used when there is no language specific template found"
        }
      }
    },
    "commands": [
      {
        "command": "extension.putPrintStatement",
        "title": "Put Print Statement"
      }
    ]
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "lint": "eslint .",
    "test": "mocha test --recursive --ui tdd",
    "test-mode": "mocha test --recursive --ui tdd --watch"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint": "^2.12.0",
    "eslint-config-xo": "^0.15.0",
    "mocha": "^2.5.3",
    "sinon": "^1.17.4",
    "vscode": "^0.11.0"
  }
}
