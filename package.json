{
  "name": "putprint",
  "displayName": "Put Print",
  "description": "Quickly put print statements",
  "version": "0.0.1",
  "publisher": "ryu1kn",
  "engines": {
    "vscode": "^1.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:putprint.putPrintStatement",
    "onCommand:putprint.resetCounter",
    "onCommand:putprint.saveText"
  ],
  "main": "./extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Put Print configuration",
      "properties": {
        "putprint.printStatement.javascript.template": {
          "type": "string",
          "default": "console.log('{{count}}: {{selection|escape}}:', {{selection}})",
          "description": "Print statement template for JavaScript"
        },
        "putprint.printStatement.javascript.escapeRules": {
          "type": "array",
          "items": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "default": [
            [
              "'",
              "\\'"
            ],
            [
              "\\",
              "\\\\"
            ]
          ],
          "description": "List of escape rules for JavaScript"
        },
        "putprint.printStatement.ruby.template": {
          "type": "string",
          "default": "print(\"{{count}}: {{selection|escape}}:\", {{selection}})",
          "description": "Print statement template for Ruby"
        },
        "putprint.printStatement.ruby.escapeRules": {
          "type": "array",
          "items": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "default": [
            [
              "\"",
              "\\\""
            ],
            [
              "\\",
              "\\\\"
            ]
          ],
          "description": "List of escape rules for Ruby"
        },
        "putprint.printStatement.default.template": {
          "type": "string",
          "default": "{{selection}}",
          "description": "Will be used when there is no language specific template found"
        }
      }
    },
    "commands": [
      {
        "command": "putprint.putPrintStatement",
        "title": "PutPrint: Put Print Statement"
      },
      {
        "command": "putprint.resetCounter",
        "title": "PutPrint: Reset Counter"
      },
      {
        "command": "putprint.saveText",
        "title": "PutPrint: Save Selected Text for Composing Print Statement"
      }
    ]
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "lint": "eslint .",
    "test": "mocha test --recursive --ui tdd",
    "test-mode": "mocha test --recursive --ui tdd --watch"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint": "^2.12.0",
    "eslint-config-xo": "^0.15.0",
    "mocha": "^2.5.3",
    "sinon": "^1.17.4",
    "sinon-chai": "^2.8.0",
    "vscode": "^0.11.0"
  }
}
